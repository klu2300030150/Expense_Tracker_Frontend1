# Environment Configuration Template for Expense Tracker
# This file is managed by Ansible - do not edit manually

# Database Configuration
DB_HOST={{ mysql_host }}
DB_PORT={{ mysql_port }}
DB_USER={{ mysql_user }}
DB_PASSWORD={{ mysql_password }}
DB_NAME={{ mysql_database }}

# Application Configuration
PORT={{ app_port }}
NODE_ENV=production

# JWT Secret (generate a secure random string)
JWT_SECRET={{ jwt_secret | default('expense-tracker-secret-key-change-in-production') }}

# CORS Configuration
CORS_ORIGIN={{ cors_origin | default('*') }}
